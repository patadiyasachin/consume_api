@model IEnumerable<CityModel>

<h2 class="text-center mt-4">City List</h2>
<div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">City Name</th>
                <th scope="col">City Code</th>
                <th scope="col">Actios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var city in Model)
            {
                <tr>
                    <td>@city.CityName</td>
                    <td>@city.CityCode</td>
                    <td>
                        <div class="d-flex">
                            <a asp-action="AddEdit"
                               asp-route-CityID="@city.CityID"
                               class="btn btn-primary btn-sm me-2">Edit</a>
                            <form asp-action="Delete" 
                                  asp-route-cityID="@city.CityID" 
                                  method="post" 
                                  class="m-0">
                                <button type="button"
                                        class="btn btn-danger btn-sm"
                                        onclick="deleteCity(@city.CityID)">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }

            <a class="btn btn-primary btn-sm m-2 w-25 d-block ms-auto" asp-action="AddEdit" asp-controller="City">
                Add
            </a>
        </tbody>
    </table>
</div>

<style>
    h2 {
        font-family: 'Arial', sans-serif;
        color: #2c3e50;
    }
    .table {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }
    .btn {
        font-size: 0.875rem;
    }
    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }
    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }
    .btn:hover {
        opacity: 0.9;
    }
</style>

<script>
    function deleteCity(cityID) {
        if (confirm("Are you sure you want to delete this city?")) {
            fetch(`/City/Delete?cityID=${cityID}`, {
                method: 'DELETE'
            })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Failed to delete the city.');
                    }
                });
        }
    }
</script>