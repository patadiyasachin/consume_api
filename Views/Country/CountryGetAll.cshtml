@model IEnumerable<CountryModel>

<h2 class="text-center mt-4">Country List</h2>
<div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Country Name</th>
                <th scope="col">Country Code</th>
                <th scope="col">Actios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Model)
            {
                <tr>
                    <td>@country.CountryName</td>
                    <td>@country.CountryCode</td>
                    <td>
                        <div class="d-flex">
                            <a asp-action="AddEdit"
asp-controller="Country"
                               asp-route-countryID="@country.CountryID"
                               class="btn btn-primary btn-sm me-2">Edit</a>
                            <form asp-action="Delete"
                                  asp-route-countryID="@country.CountryID"
                                  method="post"
                                  class="m-0">
                                <a type="button"
                                        class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Country" asp-route-countryID="@country.CountryID">
                                    Delete
                                </a>
                            </form>
                        </div>
                    </td>
                </tr>
            }

            <a class="btn btn-primary btn-sm m-2 w-25 d-block ms-auto" asp-action="AddEdit" asp-controller="Country">
                Add
            </a>
        </tbody>
    </table>
</div>

<style>
    h2 {
        font-family: 'Arial', sans-serif;
        color: #2c3e50;
    }

    .table {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .btn {
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>

