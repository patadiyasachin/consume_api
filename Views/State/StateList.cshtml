@model IEnumerable<StateModel>

<h2 class="text-center mt-4">State List</h2>
<div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">state Name</th>
                <th scope="col">state Code</th>
                <th scope="col">Actios</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var state in Model)
            {
                <tr>
                    <td>@state.stateName</td>
                    <td>@state.stateCode</td>
                    <td>
                        <div class="d-flex">
                            <a asp-action="AddEdit"
                               asp-route-StateID="@state.stateID"
                               class="btn btn-primary btn-sm me-2">Edit</a>
                            <form asp-action="Delete"
                                  asp-route-CityID="@state.stateID"
                                  method="post"
                                  class="m-0">
                                <a type="button"
                                   class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="State" asp-route-stateID="@state.stateID">
                                    Delete
                                </a>
                            </form>
                        </div>
                    </td>
                </tr>
            }

            <a class="btn btn-primary btn-sm m-2 w-25 d-block ms-auto" asp-action="AddEdit" asp-controller="State">
                Add
            </a>
        </tbody>
    </table>
</div>

<style>
    h2 {
        font-family: 'Arial', sans-serif;
        color: #2c3e50;
    }

    .table {
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .btn {
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
    }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>
